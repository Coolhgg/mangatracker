{
  "name": "mangatracker",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.5.0",
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.1.1",
    "typescript": "^5.4.5",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
  }
}
